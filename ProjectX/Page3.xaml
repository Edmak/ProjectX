<Page x:Class="ProjectX.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:oxy="http://oxyplot.org/wpf"
      xmlns:local="clr-namespace:ProjectX"
      mc:Ignorable="d" 
      d:DesignHeight="610" d:DesignWidth="1000"
      Title="Page3">
    <Page.DataContext>
        <local:Class1></local:Class1>
    </Page.DataContext>
    <Grid>
        <Grid Margin="0,-20,0,0">
            <oxy:PlotView Model="{Binding Model}"  Width="900" Height="500"  />
            <StackPanel Margin="600,580,0,0">
                <Button Content="Расcчитать" Height="40" Width="120" Click="Button_Click_1" FontSize="16">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="#FFFFFFFE" Offset="1"/>
                            <GradientStop Color="#FFF3E1AF" Offset="0"/>
                            <GradientStop Color="#FFFFFDFB" Offset="0.564"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>

        </Grid>

    </Grid>
</Page>
